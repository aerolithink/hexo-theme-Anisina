---
layout: layout
---
<style>
  .posts {
    padding-left: 40px;
  }
</style>

<!-- Page Header -->
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 ">
                <div class="site-heading text-center">
                    <h1><%= page.title || 'Tags' %></h1>
                    <span class="subheading"><%= page.description || config.subtitle || "" %></span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
  <div class="row" style="margin-top: 60px;">
    <%- partial('_partial/sidebar') %>
    <div class="col-xs-12 col-sm-9">
      <h2>全部文章 (共<%- site.posts.length %>篇文章)</h2>
      <ol style="list-style-type: none;">

        <% var allPosts = site.posts.sort('date', -1);
          var lastMonth = 13;

          allPosts.forEach(post => {

            if (post.date.month() < lastMonth) {
              lastMonth = post.date.month() %>
                <h2 id="<%- post.date.year()%>-<%-post.date.month() + 1%>">
                  <%- post.date.month() + 1 %>月
                </h2>
                <hr />
            <% } %>

            <li class="posts">
              <a href="<%- config.root %><%- post.path %>">
                <%- post.date.date() %>日 <%- post.title %>
              </a>
            </li>

        <% }); %>
      </ol>
    </div>
  </div>
</div>
