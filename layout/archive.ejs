---
layout: layout
---
<!-- Page Header -->
<%- partial('_partial/header') %>

<div class="container">
  <div class="row">
    <%- partial('_partial/sidebar') %>
    <div class="col-xs-12 col-sm-9">
      <h2>全部文章 (共<%- site.posts.length %>篇文章)</h2>
      <ul>
        <% var allPosts = site.posts.sort('date', -1);
          var lastMonth = 13;

          allPosts.forEach(post => {

            if (post.date.month() < lastMonth) {
              lastMonth = post.date.month() %>
                <h2 id="<%- post.date.year()%>-<%-post.date.month() + 1%>">
                  <%- post.date.month() + 1 %>月
                </h2>
                <hr />
            <% } %>

            <li class="posts">
              <a href="<%- config.root %><%- post.path %>">
                <%- post.title %> (<%- post.date.month() + 1 %>月<%- post.date.date() %>日)
              </a>
            </li>

        <% }); %>
      </ul>
    </div>
  </div>
</div>
